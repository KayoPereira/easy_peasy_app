<div class="container info-student">
  <div class="d-flex flex-column align-items-center mt-3">
    <h1 class="title-text"><%= @student.name %>'s Payements</h1>
  </div>
  <div class="card my-5 card-list">
    <div class="col-12">
      <div class="mx-3">
        <div class="container">
          <% @payments.each do |payment| %>
            <div class="d-flex">
              <span class="row title-text me-3">R$<%= payment.price %> - <%= Payment.months[payment.month ]%></span>
              <%= link_to student_payment_path(student_id: payment.student_id,id: payment.id), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to 'Back', student_path(@student), class: "btn btn-primary mt-2 me-2" %>
    <%= link_to 'New payment', new_student_payment_path(@student), class: "btn btn-success mt-2" %>
  </div>
</div>
