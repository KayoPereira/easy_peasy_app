<h1>Edit Student</h1>

<%= simple_form_for(@student) do |f| %>
  <div class="row"><%= f.input :name, placeholder: "Enter student name" %></div>
  <div class="row"><%= f.input :monthly_lessons %></div>
  <div class="row">
    <div class="col-6"><%= f.input :language, collection: Student.languages.keys %></div>
    <div class="col-6"><%= f.input :level, collection: Student.levels.keys %></div>
  </div>
  <%= f.submit class: 'btn btn-success' %>
<% end %>

<%= link_to 'Back', students_path, class: "btn btn-primary mt-2" %>
