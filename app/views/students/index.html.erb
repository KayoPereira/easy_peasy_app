<nav class="navbar navbar-inverse">
  <div class="container-fluid justify-content-between">
    <%= link_to root_path do %>
      <i class="fa-solid fa-arrow-left-long fa-lg heading"></i>
    <% end %>
    <h2 class="text-center my-2 heading title-text">My Students</h2>
    <%= link_to new_student_path do %>
      <i class="fa-solid fa-plus fa-lg heading"></i>
    <% end %>
  </div>
</nav>
<div class="container mt-2">
  <div class="row">
    <% @students.each do |student| %>
      <div class="col-6 my-2">
        <div class="card-student" >
          <%= link_to student_path(student), class:"text-decoration-none" do %>
            <p class="mb-3 student-text text-center"><%= student.name %></p>
            <p class="mb-3 student-text text-center"><%= student.language %></p>
            <%= link_to student_path(student), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
              <i class="fa-solid fa-trash m-2"></i>
            <% end %>
            <%= link_to edit_student_path(student) do %>
              <i class="fa-solid fa-pen-to-square"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
